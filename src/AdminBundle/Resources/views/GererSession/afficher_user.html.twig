                                        {#<td class="cell100 column4">{{ x.dateRelease|date("d/m/Y") }}</td>#}
                                        <td class="cell100 column3">{{ x.email}}</td>
                                        <td class="cell100 column4">{{ x.last_login|date("d/m/Y") }}</td>
                                        {#
                                        <td class="cell100 column7">{{ x.author }}</td>
                                        <td class="cell100 column5"> <a  href="{{ path('supprimer_session',{'id' : x.id}) }}"><i class="fa fa-trash"></i></a> </td>
                                        <td class="cell100 column6"> <a  href="{{ path('editer_session',{'id' : x.id}) }}"><button type="button" class="btn btn-secondary btn-sm">Modifier</button></a> </td>
