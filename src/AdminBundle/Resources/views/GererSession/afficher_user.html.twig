        <div class="container-table100">
            <div class="container">
                <div class="row">
                    <div class="col-sm">

                    </div>
                    <div class="col-sm">
                    </div>
                    <div class="col-sm">
                        <!-- Search form -->
                        <form class="form-inline active-pink-3 active-pink-4">
                            <i class="fa fa-search" aria-hidden="true"></i>
                            <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Recherche" aria-label="Search" onkeyup="myFunction()">
                        </form>
                    </div>
                </div>
            </div>
            <div class="wrap-table100">
                <div class="table100 ver1">
                    <div class="table100-firstcol">
                        <table id="myTable">
                            <thead>
                            <tr class="row100 head">
                                <th class="cell100 column1">Client</th>
                            </tr>
                            </thead>
                            <tbody>



                            {%  for x in users  %}
                                <tr class="row100 body">
                                    <td class="cell100 column1"><button type="button" class="btn btn-secondary btn-sm">O</button>{{ x.username }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="wrap-table100-nextcols js-pscroll">
                        <div class="table100-nextcols">
                            <table id="myTable2">
                                <thead>
                                <tr class="row100 head">
                                    <th class="cell100 column2">Id</th>
                                    {#<th class="cell100 column3">Nom</th>#}
                                    <th class="cell100 column3">Email </th>
                                    <th class="cell100 column4">Last Login</th>
                                    {#<th class="cell100 column6">Price</th>
